{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
          "version": "detect"
        }
      },
      
      "parserOptions": {
          "ecmaVersion": 6,
          "sourceType": "module",
          "ecmaFeatures": {
              "jsx": true,
              "modules": true,
              "experimentalObjectRestSpread": true
          }
      },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope" : "off" ,
        
        "react/prop-types": ["off"],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
